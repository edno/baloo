{
        "name": "edno/baloo",
        "description": "Basic Abstraction Layer Object Oriented for PHP",
        "license": "Apache-2.0",
        "keywords": ["pdo","database","abstraction"],
        "authors": [
        {
            "name": "Greg Heitz",
            "email": "edno_gh@yahoo.fr",
            "role": "Developer"
        }
        ],
    "autoload": {
        "psr-4": {
            "Baloo\\": "src/core/",
            "Baloo\\Packman\\": "src/core/",
            "Baloo\\Lib\\": "src/lib/",
            "Baloo\\Modules\\": "src/modules/",
            "Baloo\\UnitTests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-pdo": "*",
        "monolog/monolog": "~1.0"
    },
    "require-dev": {
        "ext-simplexml": "*",
        "phpunit/phpunit": "~5.3",
        "phpunit/dbunit": "~2.0",
        "mikey179/vfsStream": "~1.6",
        "squizlabs/php_codesniffer": "*",
        "fabpot/php-cs-fixer": "*",
        "pdepend/pdepend" : "*",
        "phpmd/phpmd" : "*",
        "phpunit/php-code-coverage": "*"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "scripts": {
        "post-install-cmd": "if type pre-commit &>/dev/null; then pre-commit install; else echo 'pre-commit not available - skipped'; fi;",
        "post-update-cmd": "if type pre-commit &>/dev/null; then pre-commit autoupdate; else echo 'pre-commit not available - skipped'; fi;"
    }
}
